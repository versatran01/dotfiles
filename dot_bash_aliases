# vim
export EDITOR=nvim
alias vim='nvim'

# programs
alias xc='xclip -se c'
alias xo='xdg-open'
alias sup='sudo apt update'
alias sug='sudo apt upgrade'
alias smi='sudo make install'
alias acl='sudo apt autoclean'
alias arm='sudo apt autoremove'

# shell command
alias rmi='rm -i'
alias mvi='mv -i'
alias cpi='cp -i'
alias grep='grep --color'
alias tmux='tmux -2'
alias eecho='echo -e'
alias btop='bpytop'
alias dstat='dstat -cdlmnpsy'

# git
alias grt='cd $(git rev-parse --show-toplevel)'
alias gst='git status'
alias gba='git branch -a'
alias gdf='git diff'
alias gdh='git diff HEAD'

# source bashrc
alias sbrc='source ~/.bashrc'
alias szrc='source ~/.zshrc'

# python
alias ppwd='export PYTHONPATH=$(pwd):$PYTHONPATH'

# cpu
alias cpuperf='sudo cpupower frequency-set --governor performance'
alias cpusave='sudo cpupower frequency-set --governor powersave'

# cmake
alias cmb='cmake -B build'
alias cbb='cmake --build build'

alias ls='eza'
alias ll='eza -l --icons'

alias scon='eval "$(/home/chao/miniforge3/bin/conda shell.bash hook)"'